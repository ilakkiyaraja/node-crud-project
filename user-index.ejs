<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container">
       <h1><%=title %></h1> 
       <a href="/add" class ="btn btn-primary mt-5">Add Employee</a>
     <table class=" table table-dark table-striped mt-5">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Mobile</th>
                    <th>City</th>
                    <th><i class="bi bi-pencil"></i></th>
                <th><i class="bi bi-trash3"></i></th>
                </tr>
            </thead>
            <tbody>
                <% employee.forEach(function(e){%>
<tr>
                  <td><%=e.Name%></td>
                  <td><%=e.Email%></td>
                  <td><%=e.Mobile%></td>
                  <td><%=e.City%></td>
                  <td>
                    <a href="edit/<%=e.userId%>"  class="btn btn-success">update</a></td>
                   <td><a href="delete/<%=e.userId%>" class="btn btn-danger">delete</a>
                  </td>
</tr>
             <% });%>
            </tbody>
        </table>
    </div>
</body>
</html>